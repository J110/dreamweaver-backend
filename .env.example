# ==========================================
# DreamWeaver Backend Configuration
# ==========================================

# Application Settings
APP_NAME=DreamWeaver
API_VERSION=v1
DEBUG=false
ENVIRONMENT=development

# API Keys and Credentials
GROQ_API_KEY=your_groq_api_key_here
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Firebase Settings
STORAGE_BUCKET=your-firebase-project.appspot.com

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Quota Settings
MAX_CONTENT_PER_DAY_FREE=1
MAX_CONTENT_PER_DAY_PREMIUM=5

# Cache Settings
TTS_CACHE_DIR=./cache/tts
ALBUM_ART_CACHE_DIR=./cache/album_art
BACKGROUND_MUSIC_DIR=./cache/background_music

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
